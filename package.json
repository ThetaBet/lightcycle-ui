{
  "name": "vide",
  "version": "0.0.0",
  "type": "module",
  "description": "Visual Interface Dynamic Engine. A CSS-first, time-driven UI lighting system.",
  "main": "dist/vide.umd.js",
  "module": "dist/vide.esm.js",
  "unpkg": "dist/vide.umd.min.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/",
    "src/",
    "README.md"
  ],
  "scripts": {
    "dev": "vite",
    "build:types": "tsc -p tsconfig.json --emitDeclarationOnly",
    "build": "npm run build:types && rollup -c",
    "build:dev": "rollup -c --watch",
    "prepare": "npm run build",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "test": "echo \"No tests configured\""
  },
  "keywords": [
    "light",
    "ui",
    "web-components",
    "css",
    "lighting"
  ],
  "author": "Thomas Bellardone",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-babel": "^6.0.0",
    "@rollup/plugin-commonjs": "^24.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-terser": "^0.4.0",
    "@rollup/plugin-typescript": "^12.0.0",
    "eslint": "^8.0.0",
    "rollup": "^3.0.0",
    "tslib": "^2.8.1",
    "typescript": "^5.1.0",
    "vite": "^5.0.0"
  }
}